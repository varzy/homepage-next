{
  "name": "homepage-next",
  "version": "2.0.0",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "dev": "next dev ",
    "exam": "npm run fetch-posts && npm run format && npm run lint",
    "build": "next build ",
    "build:debug": "next build  --debug",
    "start": "next start",
    "lint": "pnpm exec eslint .",
    "lint:fix": "pnpm exec eslint . --fix",
    "format": "prettier --write . --log-level warn",
    "fetch-posts": "tsx scripts/fetch-posts.ts",
    "fetch-posts:force": "tsx scripts/fetch-posts.ts --force",
    "release-posts": "git pull && npm run exam && git add . && git commit -m 'Release: Update posts.' && git push"
  },
  "dependencies": {
    "@giscus/react": "^3.1.0",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "16.1.4",
    "@notionhq/client": "^5.4.0",
    "@tailwindcss/typography": "^0.5.19",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "glob": "^13.0.0",
    "gray-matter": "^4.0.3",
    "next": "16.1.4",
    "next-mdx-remote": "^5.0.0",
    "notion-to-md": "^3.1.9",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1",
    "rss": "^1.2.2",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/rss": "^0.0.32",
    "eslint": "^9.39.1",
    "eslint-config-next": "16.1.4",
    "jsdom": "^27.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "raw-loader": "^4.0.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
