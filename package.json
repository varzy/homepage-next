    "@notionhq/client": "^2.3.0",
    "@tailwindcss/typography": "^0.5.16",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "glob": "^10.4.5",
    "gray-matter": "^4.0.3",
    "next": "15.4.5",
    "next-mdx-remote": "^5.0.0",
    "notion-to-md": "^3.1.9",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-syntax-highlighter": "^15.6.1",
    "remark-gfm": "^4.0.1",
    "rss": "^1.2.2"
